{
  "compilerOptions": { /* Docs: https://www.typescriptlang.org/tsconfig */
    "target": "es2018",
    "module": "esnext",
    "outDir": ".",
    "rootDir": "..",
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "checkJs": false,
    "allowJs": true,
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "lib": [
      "es6"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowUnreachableCode": true,
  },
  "include": [
    "index.ts",
    "custom_span/**/*.ts"
  ],
  "exclude": [
    "../node_modules",
    "<node_internals>/**",
  ]
}